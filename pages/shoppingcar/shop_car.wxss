/* pages/shoppingcar/shop_car.wxss */
/**/
/*商品项目*/
.shop{
  display: flex;
  border-bottom: 1rpx solid #ddd;
  padding:20rpx;
  font-size:31rpx;
}

.shop .shop-check {
 margin: 50rpx 20rpx 0 0;
}
.shop-info{
  display: flex;
  flex-direction: column;
}
.shop-img{
  width:150rpx;
  height:150rpx;
  margin-right: 25rpx;
  border-radius: 50%;
}
.shop-button{
  margin-top:60rpx;
}
.shop-sign{
  display: inline-block;
  width: 70rpx;
}
.shop-number{
  width:40rpx;
  display: inline-block
}
.shop-add{
 display: inline-block;
  width: 10rpx;
  padding-left: 45rpx;
}
/*商品价格*/
.shop-price{
  display: flex;
  flex-direction: column;
  margin-left: 170rpx;
}
.shop-price .delete{
  display: block;
  margin: 60rpx 0 0 30rpx;
}
/*总选*/
.total{
  width:100%;
  height: 80rpx;
  font-size: 32rpx;
  color:white;
  display:flex;
  position: absolute;
  left:0;
  top:1030rpx;
  background: #AB956D;
}
.total .shop-check view{
   margin: 12rpx 20rpx 0 20rpx;
}
.total .checkall{
  margin-top: 15rpx;
}
.total .total-price{
  margin: 15rpx 38rpx 0 380rpx;
}
.total .shop-arrow{
  font-size: 42rpx;
  margin-top:6rpx;
}

.selectAll{
  margin: 15rpx 10rpx 0 15rpx;
}
.cart-no-data{
    padding:40rpx 0;
    color: #999;
    text-align: center;
}